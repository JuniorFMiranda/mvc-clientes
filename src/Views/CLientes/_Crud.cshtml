@model MvcClientes.Models.Cliente;

<fieldset>
    <legend>Outras informações</legend>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control"/> 
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Documento" class="control-label">Documento</label>
            <input asp-for="Documento" class="form-control"/> 
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
    </div>
</fieldset>
</br> 
<fieldset>
    <legend>Outras informações</legend>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="LimiteCredito" class="control-label">Limite de crédito</label>
            <input type="number" asp-for="LimiteCredito" class="form-control" min="0.00" step="0.01"/> 
            <span asp-validation-for="LimiteCredito" class="text-danger"></span>
        </div>
        <div class="form-check">
            <label asp-for="Ativo" class="form-check-label">Ativo</label>
            <input type="checkbox" asp-for="Ativo" class="form-check-input"/>
        </div>
    </div>
</fieldset>